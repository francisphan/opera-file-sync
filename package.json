{
  "name": "opera-file-sync",
  "version": "1.0.0",
  "description": "Standalone script to sync OPERA file exports to Salesforce",
  "main": "opera-file-sync.js",
  "bin": {
    "opera-sync": "./opera-file-sync.js"
  },
  "scripts": {
    "start": "node opera-file-sync.js",
    "start:db": "node opera-db-sync.js",
    "test": "node test-connection.js",
    "test:oracle": "node test-oracle-connection.js",
    "test:notifications": "node test-notifications.js",
    "build:bundle": "ncc build opera-file-sync.js -o dist",
    "build:exe": "pkg opera-file-sync.js --targets node18-win-x64 --output dist/opera-sync-file.exe",
    "build:exe:db": "pkg opera-db-sync.js --targets node18-win-x64 --output dist/opera-sync-db.exe",
    "build:all": "npm run build:exe && npm run build:exe:db",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/opera-sync-linux",
    "build:macos": "pkg . --targets node18-macos-x64 --output dist/opera-sync-macos"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "opera",
    "salesforce",
    "pms",
    "sync",
    "integration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "chokidar": "^3.6.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^4.3.5",
    "jsforce": "^3.10.14",
    "node-schedule": "^2.1.1",
    "nodemailer": "^8.0.1",
    "oracledb": "^6.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "express": "^4.18.2",
    "googleapis": "^171.4.0",
    "open": "^8.4.0",
    "pkg": "^5.8.1"
  }
}
